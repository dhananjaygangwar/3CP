@model CyberCrimeComplaintPortal.Models.Complaint

@{
    ViewData["Title"] = "Delete Complaint";
}

<h2 class="text-danger text-center">Are you sure you want to delete this complaint?</h2>

<div>
    <h4>Complaint from @Model.FullName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Details</dt>
        <dd class="col-sm-10">@Model.IncidentDetails</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.status</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
